{
  "name": "whats-provider",
  "description": "WhatsApp Provider API - A clean Go boilerplate with WhatsApp integration",
  "keywords": ["go", "api", "whatsapp", "clean-architecture"],
  "website": "",
  "repository": "https://github.com/vmatteus/whats-provider",
  "logo": "",
  "success_url": "/health",
  "scripts": {
    "dokku": {
      "predeploy": "echo 'Preparing deployment...'"
    }
  },
  "env": {
    "APP_SERVER_HOST": {
      "description": "Server host",
      "value": "0.0.0.0",
      "required": false
    },
    "APP_SERVER_PORT": {
      "description": "Server port",
      "value": "8080",
      "required": false
    },
    "APP_SERVER_MODE": {
      "description": "Server mode (debug, release, test)",
      "value": "release",
      "required": false
    },
    "APP_DATABASE_DRIVER": {
      "description": "Database driver (postgres, sqlite)",
      "value": "postgres",
      "required": true
    },
    "APP_DATABASE_POSTGRES_HOST": {
      "description": "Database host",
      "required": true
    },
    "APP_DATABASE_POSTGRES_PORT": {
      "description": "Database port",
      "value": "5432",
      "required": false
    },
    "APP_DATABASE_POSTGRES_USER": {
      "description": "Database user",
      "required": true
    },
    "APP_DATABASE_POSTGRES_PASSWORD": {
      "description": "Database password",
      "required": true
    },
    "APP_DATABASE_POSTGRES_DATABASE": {
      "description": "Database name",
      "required": true
    },
    "APP_DATABASE_POSTGRES_SSLMODE": {
      "description": "Database SSL mode",
      "value": "require",
      "required": false
    },
    "APP_LOGGER_LEVEL": {
      "description": "Logger level",
      "value": "info",
      "required": false
    },
    "APP_LOGGER_FORMAT": {
      "description": "Logger format",
      "value": "json",
      "required": false
    },
    "APP_LOGGER_PROVIDER": {
      "description": "Logger provider",
      "value": "stdout",
      "required": false
    },
    "APP_WHATSAPP_PROVIDERS_ZAPI_BASE_URL": {
      "description": "ZApi base URL for WhatsApp integration",
      "required": false
    },
    "APP_WHATSAPP_PROVIDERS_ZAPI_CLIENT_TOKEN": {
      "description": "ZApi client token for WhatsApp integration",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/go"
    }
  ]
}
